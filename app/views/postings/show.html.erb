<div class='row'>
  <div class="showpage col-md-6" id='blacklink'>

    <div id="thumbnails" class="carousel slide" data-ride="carousel">

      <ol class="carousel-indicators">
        <% @posting.uploads.each_with_index do |image, i| %>
          <li data-target="#thumbnails" data-slide-to="<%= i %>" class="<%= i == 0 ? "active" : "" %>"></li>
        <% end %>
      </ol>

      <div class="carousel-inner">
        <% @posting.uploads.each_with_index do |image, i| %>
          <div class="item <%= i == 0 ? "active" : "" %>"><%= image_tag image.uploaded_file.url(:medium) %></div>
        <% end %>
      </div>
      <a class="left carousel-control" href="#thumbnails" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#thumbnails" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <br>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="col-md-2">Title:</th>
          <td class="col-md-10"><%= @posting.title %></td>
        </tr>
        <tr>
          <th class="col-md-2">Description:</th>
          <td class="col-md-10"><%= @posting.description %></td>
        </tr>
        <tr>
          <th class="col-md-2">Category:</th>
          <td class="col-md-10"><%= @posting.category.try :name %></td>
        </tr>
        <tr>
          <th class="col-md-2">Rate:</th>
          <td class="col-md-10"><%= @posting.rate %></td>
        </tr>
        <tr>
          <th class="col-md-2">Dates Available:</th>
          <td class="col-md-10"><%= @posting.available_dates.try :first %> to <%= @posting.available_dates.try :last %></td>
        </tr>
        <tr>
          <th class="col-md-2">Street:</th>
          <td class="col-md-10"><%= @posting.street %></td>
        </tr>
        <tr>
          <th class="col-md-2">City:</th>
          <td class="col-md-10"><%= @posting.city %></td>
        </tr>
        <tr>
          <th class="col-md-2">State:</th>
          <td class="col-md-10"><%= @posting.state %></td>
        </tr>
        <tr>
          <th class="col-md-2">Zip:</th>
          <td class="col-md-10"><%= @posting.zip %></td>
        </tr>
        <tr>
          <th class="col-md-2">Phone:</th>
          <td class="col-md-10"><%= @posting.phone %></td>
        </tr>
        <tr>
          <th class="col-md-2">Offered By:</th>
          <td class="col-md-10"><%= link_to  "#{@posting.user.email if @posting.user}", users_path(@posting.user_id) %></td>
        </tr>
        <tr>
          <td colspan="2">
          <div >
            <%= render "reviews/form", :locals => { :review => @review } %>
          </div>
        </td>
        </tr>
      </tbody>
    </table>

    <%= form_tag new_posting_reservation_path(@posting), method: :get %>

      <%= render 'shared/date_range_picker' %>

      <input type="submit" value="Reserve">
    </form>


    <%= link_to 'Edit', edit_posting_path(@posting) %> |
    <%= link_to 'Back', postings_path %>
  </div>

  <div class="container col-md-6">
    <div id="map" class="map" data-address="<%= @posting.street %>, <%= @posting.city %> <%= @posting.state %> <%= @posting.zip %>"></div>
    <h3><strong> REVIEWS </strong></h3>
    <table class="table table-bordered">
    <thead>
      <th>Comments</th>
      <th>Created</th>
    </thead>
      <tbody>
        <%= render @reviews %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'new_show' %>
