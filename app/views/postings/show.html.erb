
<div class='showpage' id='blacklink'>
<p>
  <strong>Title:</strong>
  <%= @posting.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @posting.description %>
</p>
<% unless @posting.image.blank? %>
  <p>
  <%= image_tag @posting.image.url  %>
  </p>
<% end %>
<p>
  <strong>Category:</strong>
  <%= @posting.category.try :name %>
</p>

<p>
  <strong>Rate:</strong>
  <%= @posting.rate %>
</p>

<p>
  <strong>Date range:</strong>
  <%= @posting.available_dates %>
</p>

<p>
  <strong>Street:</strong>
  <%= @posting.street %>
</p>

<p>
  <strong>City:</strong>
  <%= @posting.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @posting.state %>
</p>


<p>
  <strong>Zip:</strong>
  <%= @posting.zip %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @posting.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @posting.email %>
</p>

<%= form_tag new_posting_reservation_path(@posting), method: :get %>

<%= render 'shared/date_range_picker' %>

<input type="submit" value="Reserve">
</form>
<%= link_to 'Edit', edit_posting_path(@posting) %> |
<%= link_to 'Back', postings_path %>
</div>
<script>
  $( "#datepicker" ).datepicker(<%= date_range_string_for_js @posting.available_dates %>);
</script>
